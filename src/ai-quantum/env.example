# Pandora Cyber AI/Quantum Security - 環境配置範例
# 請複製此文件為 .env 並填入實際值

# ========== IBM Quantum 配置 ==========
IBM_QUANTUM_TOKEN=your_ibm_quantum_api_token_here
IBM_QUANTUM_CHANNEL=ibm_quantum
IBM_QUANTUM_INSTANCE=ibm-q/open/main

# ========== 量子後端選擇 ==========
# 可選值: simulator_statevector, simulator_mps, ibmq_qasm_simulator, ibm_manila, ibm_nairobi, etc.
QUANTUM_BACKEND=simulator_statevector
QUANTUM_REAL_HARDWARE_ENABLED=false

# ========== Zero Trust 配置 ==========
ZERO_TRUST_ENABLED=true
QUANTUM_HYBRID_MODE=true
AUTO_RESPONSE_ENABLED=false
PREDICTION_THRESHOLD=0.7

# ========== 量子神經網絡配置 ==========
QUANTUM_DIMENSIONS=10
QUANTUM_CIRCUIT_REPS=3
QUANTUM_FEATURE_MAP=ZZFeatureMap
QUANTUM_ANSATZ=RealAmplitudes

# ========== 強化學習配置 ==========
RL_LEARNING_RATE=0.1
RL_DISCOUNT_FACTOR=0.95
RL_QUANTUM_EXPLORATION=0.3

# ========== 作業管理配置 ==========
QUANTUM_JOB_TIMEOUT_SECONDS=300
QUANTUM_JOB_RETRY_COUNT=3
QUANTUM_JOB_CACHE_ENABLED=true

# ========== 排程配置 ==========
SCHEDULE_DAILY_ANALYSIS=true
SCHEDULE_WEEKLY_TRAINING=true
SCHEDULE_MONTHLY_BATCH=true

# ========== 服務配置 ==========
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info

# ========== 資料庫配置 ==========
RABBITMQ_URL=amqp://pandora:pandora123@rabbitmq:5672/
REDIS_URL=redis://redis:6379
POSTGRES_URL=postgresql://pandora:pandora123@postgres:5432/pandora_db

# ========== 模型路徑 ==========
ML_MODEL_PATH=/app/models
QUANTUM_MODEL_PATH=/app/models/quantum
ZERO_TRUST_DATA_PATH=/app/data/zero_trust

# ========== Prometheus 配置 ==========
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9091

